extends layout

block content
  //h1= title
  #listContainer
    #productList
      h1 ANVÄNDARE
      //p #{username} is logged in.
      button(id='btnAdd',onClick='location.href="newUser";') Skapa användare
      br
      br  
      table
        thead
          tr
            th Anställningsnr
            th Användarnamn
            th Förnamn
            th Efternamn
            th E-post
            th
            th
          tbody
            each item, i in users.users
              tr
                td= item.employeeNumber
                td= item.username
                td= item.firstName
                td= item.lastName
                td= item.email
                td
                  button(name='vehicleId',value='#{item.id}',id='btnAdd', onClick='location.href="editUser?id=#{item.userId}";return false;') Ändra
                td
                  button(id='btnAdd',onClick='location.href="removeUser?id=#{item.userId}";return false;') Radera

